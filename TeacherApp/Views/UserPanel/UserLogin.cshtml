<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <form class="login100-form validate-form" method="post">
                <span class="login100-form-title p-b-26">
                    @{
                        var data = ViewBag.Message;
                    }
                    <span class="error" style="font-size : 16px; color:red;">
                        @data
                        <br />
                    </span>
                    ברוכים הבאים לחנות האינטרנט שלנו
                </span>
                <span class="login100-form-title p-b-48">
                    <img class="animated fadeInUp" src="~/images/logo.png" style="width : 150px; height: 40px;">
                    <i class="zmdi zmdi-font"></i>
                </span>

                <div dir="rtl" class="wrap-input100 validate-input">
                    <input class="input100" id="username" type="text" name="username">
                    <span class="focus-input100" data-placeholder="שם משתמש"></span>
                </div>

                <div dir="rtl" class="wrap-input100 validate-input" data-validate="Enter password">
                    <span class="btn-show-pass">
                        <i class="zmdi zmdi-eye"></i>
                    </span>
                    <input class="input100" id="password" type="password" name="password">
                    <span class="focus-input100" data-placeholder="סיסמא"></span>
                </div>

                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn" style="font-size : 20px;" type="submit">
                            התחבר
                        </button>
                    </div>
                </div>

                <div class="text-center p-t-115">
                    <span class="txt1" style="font-size : 16px;">
                        אין לך משתמש ?
                    </span>

                    <a class="txt2" href="/users/register" style="font-size : 16px;">
                        לחץ כאן להרשמה
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

